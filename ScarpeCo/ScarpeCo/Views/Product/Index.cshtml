@model IEnumerable<ScarpeCo.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1>Products</h1>

<div class="product-list">
    @foreach (var product in Model)
    {
        <div class="product-item">
            <img src="~/images/Jordan.jpeg" alt="@product.Name" />
            <h2>@product.Name</h2>
            <p>Price: @product.Price.ToString("C")</p>
            <a href="@Url.Action("Details", "Product", new { id = product.Id })">View Details</a>
        </div>
    }
</div>

<style>
    .product-list {
        display: flex;
        flex-wrap: wrap;
    }

    .product-item {
        border: 1px solid #ccc;
        margin: 10px;
        padding: 10px;
        width: 200px;
    }

        .product-item img {
            max-width: 100%;
        }
</style>

