@model ScarpeCo.Models.Product

@{
    ViewData["Title"] = @Model.Name;
}

<h1>@Model.Name</h1>
<img src="~/images/Jordan.jpeg" alt="@Model.Name" />
<p>@Model.Description</p>
<p>Price: @Model.Price.ToString("C")</p>

<div class="additional-images">
    <img src="~/images/Jordan.jpeg" alt="Additional Image 1" />
    <!-- <img src="~/images/Jordan.jpeg" alt="Additional Image 2" /> -->
</div>

<a href="@Url.Action("Index", "Product")">Back to Products</a>

<style>
    .additional-images img {
        max-width: 100%;
        margin: 10px 0;
    }
</style>
